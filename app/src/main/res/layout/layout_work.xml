<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_work">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="11dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back" />

        <Spinner
            android:id="@+id/spnCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="end"/>

        <EditText
            android:id="@+id/edtTilteWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_work"
            android:gravity="center"
            android:ems="10"
            android:inputType="text"
            android:textSize="20dp"
            android:hint="Nhập công việc của bạn" />

        <LinearLayout
            android:id="@+id/layoutStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgStartTime"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_ngaythang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:text="Ngày bắt đầu"/>

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="24/03/2024" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEndTime"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_ngaythang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:text="Ngày đến hạn" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="25/03/2024" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRepeat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_laplai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:text="Lặp lại" />

            <TextView
                android:id="@+id/tvRepeat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mỗi ngày" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNoteWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgNote"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_notework" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:text="Ghi chú" />

            <TextView
                android:id="@+id/tvNoteWork"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:hint="Chỉnh sửa" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutImportant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgImportant"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_quantrong" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:text="Đánh dấu là quan trọng" />

            <Switch
                android:id="@+id/swtImportant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B2DFDB"
            android:text="Hoàn thành"
            android:textColor="#00C853"/>
    </LinearLayout>

</ScrollView>